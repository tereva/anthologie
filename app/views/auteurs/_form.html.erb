<%= form_with model: @auteur, local: true do |form| %> 

<% if @auteur.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@auteur.errors.count, "erreur") %>. Impossible d'enregistrer le auteur :
      </h2>
      <ul>
        <% @auteur.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :nom%><br>
    <%= form.text_field :nom %>
  </p>
  <p>
    <%= form.label :bio %><br>
    <%= form.text_area :bio%>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>